<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_judul"
            android:background="@drawable/background_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_image"
            app:cardCornerRadius="6dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="12dp"
            android:layout_width="110dp"
            android:layout_height="152dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/image_artikel"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:layout_centerInParent="true"
                    android:background="#59000000"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_judul"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toTopOf="@id/card_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:paddingTop="8dp"
            android:text="Judul"
            android:textColor="#000000"
            android:textSize="13dp"
            android:fontFamily="@font/poppins"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_penulis"
            app:layout_constraintTop_toBottomOf="@id/txt_judul"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="8dp"
            android:text="Oleh : Penulis"
            android:maxLines="1"
            android:textSize="12dp"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:fontFamily="@font/raleway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_tanggal"
            app:layout_constraintTop_toBottomOf="@id/txt_penulis"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:text="Tanggal Terbit : hari ini"
            android:textStyle="bold"
            android:textColor="#a9a9a9"
            android:textSize="12dp"
            android:fontFamily="@font/raleway"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cd_detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="2dp"
            android:layout_width="70dp"
            android:layout_height="35dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@color/teal_700"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_arrow_forward_black_24dp"
                    app:tint="@color/white"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>